{
  "name": "vite-electron",
  "version": "0.0.1",
  "main": "./src/main/index.js",
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc --noEmit && vite build",
    "serve": "vite preview",
    "lint": "eslint . --ext .js,.ts,.vue --ignore-path .gitignore",
    "prepare": "husky install",
    "lint:style": "stylelint \"src/**/*.(vue|less|css)\" --customSyntax postcss-less",
    "electron": "wait-on tcp:3000 && cross-env NODE_ENV=development electron .",
    "electron:dev": "concurrently -k \"npm run dev\" \"npm run electron\"",
    "electron:build": "vite build && electron-builder",
    "build-icon": "electron-icon-builder --input=./public/logo.png --output=build --flatten"
  },
  "build": {
    "appId": "vite-electron@0.0.1",
    "productName": "vite-electron",
    "copyright": "Copyright Â© 2021 yoo",
    "directories": {
      "buildResources": "build",
      "output": "dist"
    },
    "mac": {
      "icon": "build/icons/icon.icns",
      "type": "distribution",
      "target": [ "dmg" ]
    }
  },
  "dependencies": {
    "path": "^0.12.7",
    "vue": "^3.2.16",
    "vue-router": "4",
    "vuex": "^4.0.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^14.1.0",
    "@commitlint/config-conventional": "^14.1.0",
    "@types/node": "^16.11.6",
    "@typescript-eslint/eslint-plugin": "^5.3.0",
    "@typescript-eslint/parser": "^5.3.0",
    "@vitejs/plugin-vue": "^1.9.3",
    "concurrently": "^6.3.0",
    "cross-env": "^7.0.3",
    "electron": "^15.3.1",
    "electron-builder": "^22.13.1",
    "electron-icon-builder": "^2.0.1",
    "eslint": "^8.1.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-vue": "^8.0.3",
    "husky": "^7.0.4",
    "less": "^4.1.2",
    "less-loader": "^10.2.0",
    "lint-staged": "^11.2.6",
    "postcss-html": "^1.2.0",
    "postcss-less": "^5.0.0",
    "prettier": "^2.4.1",
    "stylelint": "^14.0.1",
    "stylelint-config-recommended-vue": "^1.0.0",
    "stylelint-config-standard": "^23.0.0",
    "typescript": "^4.4.3",
    "vite": "^2.6.4",
    "vue-tsc": "^0.3.0",
    "wait-on": "^6.0.0"
  },
  "env": {
    "node": true
  }
}
